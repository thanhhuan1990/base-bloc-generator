<idea-plugin>
    <id>base_bloc_generator.base_bloc_generator</id>
    <name>Base BLoC Generator</name>
    <vendor email="thanhhuan1990@gmail.com" url="http://www.google.com">ThanhHuan 1990</vendor>

    <description><![CDATA[
    Base Bloc Template Generator.<br>
    <em>https://github.com/thanhhuan1990/base_bloc_generator</em>
    ]]></description>

    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
         on how to target different products -->
    <depends>com.intellij.modules.platform</depends>

    <depends>Dart</depends>
    <depends>io.flutter</depends>

    <extensions defaultExtensionNs="com.intellij">
        <!-- Add your extensions here -->
    </extensions>

    <actions>

        <action class="base_bloc_generator.action.GenerateBlocAction"
                description="Generate a new Bloc"
                id="GenerateBlocId"
                text="Bloc Template"
                icon="/icons/dart_file.svg">
            <add-to-group
                    group-id="NewGroup"
                    relative-to-action="NewGroup"
                    anchor="after"/>
        </action>
    </actions>
</idea-plugin>